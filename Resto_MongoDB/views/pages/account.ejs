<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head.ejs')%>
</head>

<body>
  <%- include('../partials/navbar.ejs')%>
  <br>
  <br>
  <span id="account-form-title">Account : <%= LogedInForm.cl_nom %>, <%= LogedInForm.cl_prenom %></span>
    <section class="account-form-section">
      <div id="account-form-div">
        <div class="form-group">
          <label for="account-form-old-prenom">Vieux Prénom :</label>
          <input type="text" class="form-control" id="account-form-old-prenom" name="account-form-old-prenom" value="<%= LogedInForm.cl_prenom %>" disabled>
        </div>
        <div class="form-group">
          <label for="account-form-old-nom">Vieux Nom :</label>
          <input type="text" class="form-control" id="account-form-old-nom" name="account-form-old-nom" value="<%= LogedInForm.cl_nom %>" disabled>
        </div>
        <div class="form-group">
          <label for="account-form-old-email">Vieux Addresse Courriel :</label>
          <input type="email" class="form-control" id="account-form-old-email" name="account-form-old-email" value="<%= LogedInForm.cl_courriel %>" disabled>
        </div>
        <div class="form-group">
          <label for="account-form-old-phone">Vieux Téléphone :</label>
          <input type="tel" class="form-control" id="account-form-old-phone" name="account-form-old-phone" value="<%= LogedInForm.cl_telephone %>" disabled>
        </div>
        <div class="form-group">
          <label for="account-form-old-nom">Vieux Address :</label>
          <input type="text" class="form-control" id="account-form-old-address" name="account-form-old-address" value="<%= LogedInForm.cl_address %>" disabled>
        </div>
        <div class="form-group">
          <label for="account-form-old-nom">Vieux Code Postal :</label>
          <input type="text" class="form-control" id="account-form-old-zip" name="account-form-old-zip" value="<%= LogedInForm.cl_code_postal %>" disabled>
        </div>
        <div class="form-group">
          <label for="account-form-old-password">Vieux Mot de Passe :</label>
          <input type="password" class="form-control" id="account-form-old-password" name="account-form-old-password" value="<%= LogedInForm.cl_password %>" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" disabled>
        </div>
      </div>
      <div id="account-form-div">
        <form method="post" action="http://localhost:29017/account"> 
          <div class="form-group">
            <label for="account-form-new-prenom">Nouveau Prénom :</label>
            <input type="text" class="form-control" id="account-form-new-prenom" name="account-form-new-prenom" placeholder="Prénom">
          </div>
          <div class="form-group">
            <label for="account-form-new-nom">Nouveau Nom :</label>
            <input type="text" class="form-control" id="account-form-new-nom" name="account-form-new-nom" placeholder="Nom">
          </div>
          <div class="form-group">
            <label for="account-form-new-email">Nouveau Addresse Courriel :</label>
            <input type="email" class="form-control" id="account-form-new-email" name="account-form-new-email" placeholder="Addresse Courriel">
          </div>
          <div class="form-group">
            <label for="account-form-new-phone">Nouveau Téléphone :</label>
            <input type="tel" class="form-control" id="account-form-new-phone" name="account-form-new-phone" placeholder="Téléphone">
          </div>
          <div class="form-group">
            <label for="account-form-new-address">Nouveau Address :</label>
            <input type="text" class="form-control" id="account-form-new-address" name="account-form-new-address" placeholder="Address">
          </div>
          <div class="form-group">
            <label for="account-form-new-zip">Nouveau Code Postal :</label>
            <input type="text" class="form-control" id="account-form-new-zip" name="account-form-new-zip" placeholder="Code Postal">
          </div>
          <div class="form-row">
            <div class="col">
                <label for="account-form-new-password">Nouveau Mot de Passe :</label>
                <input type="password" class="form-control" id="account-form-new-password" name="account-form-new-password" placeholder="Mot de Passe" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
            </div>
            <div class="col">
                <label for="account-form-new-repassword">Entrez à nouveau le mot de passe :</label>
                <input type="password" class="form-control" id="account-form-new-repassword" name="account-form-new-repassword" placeholder="Mot de Passe" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
            </div>
          </div><br>
          <div class="form-group">
            <label for="account-form-conformation-password">Mot de Passe de Confirmation : (votre vieux mot de passe)</label>
            <input type="password" class="form-control" id="account-form-conformation-password" name="account-form-conformation-password" placeholder="Mot de Passe" required>
          </div>
          <button type="submit" class="btn btn-secondary">Soumettre</button>
        </form>
      </div>
    </section>

    <br>
    <br>
  <%- include('../partials/bootstrap.ejs')%>
  <%- include('../partials/footer.ejs')%>
</body>

</html>