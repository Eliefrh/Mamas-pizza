                <img class="menu-categorie-img" src="">
                <h2 class="menu-categorie-titre"><%= Produits[i].cat_nom %></h2>
                <div class="menu-categorie">
                    <% if(Produits[i].cat_nom == "Pizzas avec viandes"){ %>
                    <div class="menu-item">
                        <img class="menu-item-image" src=<%= Produits[i].prod_image %>>
                        <h3 class="menu-item-nom"><%= Produits[i].prod_nom %></h3>
                        <p class="menu-item-description"><%= Produits[i].prod_description %></p>
                        <button class="menu-commander" onclick="redirectToItemPage('<%= Produits[i].prod_nom %>')">Personnaliser</button>
                    </div>
                    <% } %>
                </div>
                <% categorie = false; %>
                <% } %>
