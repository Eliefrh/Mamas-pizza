<%- include ('../partials/header') %>
<br />
<div
  class="row"
  style="margin-top: 10px; margin-left: 50px; margin-right: 50px"
></div>
<form
  action="http://localhost:4000/event/edit/<%= items[0].e_id%>"
  method="post"
  class="col s12"
>
  <input type="hidden" name="e_id" value="<%= items[0].e_id %>" />

  <div class="form-group row">
    <label for="e_name" class="col-2 col-form-label"> Nom </label>
    <div class="col-10">
      <input
        type="text"
        name="e_name"
        value="<%= items[0].e_name %>"
        class="form-control"
      />
    </div>
  </div>

  <div class="form-group row">
    <label for="e_start_date" class="col-2 col-form-label"> Date DÃ©but </label>
    <div class="col-10">
      <input
        type="date"
        name="e_start_date"
        value="<%= items[0].e_start_date %>"
        class="form-control"
      />
    </div>
  </div>

  <div class="form-group row">
    <label for="e_end_date" class="col-2 col-form-label"> Date de fin </label>
    <div class="col-10">
      <input
        type="date"
        name="e_end_date"
        value="<%= items[0].e_start_end %>"
        class="form-control"
      />
    </div>
  </div>

  <div class="form-group row">
    <label for="e_desc" class="col-2 col-form-label"> Description </label>
    <div class="col-10">
      <textarea
        name="e_desc"
        id="e_desc"
        cols="30"
        rows="4"
        class="form-control"
      >
<%= items[0].e_desc %></textarea
      >
    </div>
  </div>

  <div class="form-group row">
    <label for="e_location" class="col-2 col-form-label"> Emplacement </label>
    <div class="col-10">
      <textarea
        name="e_location"
        id="e_location"
        cols="30"
        rows="4"
        class="form-control"
      >
<%= items[0].e_location %></textarea
      >
    </div>
  </div>

  <div class="form-group row">
    <label for="e_location" class="col-2 col-form-label" style="color: #ffffff">
      Click ici pour submit
    </label>
    <div class="col-10">
      <input
        type="submit"
        name="submit"
        value="Sauvegarder"
        class="btn btn-primary btn-lg"
      />
    </div>
  </div>
</form>

<%- include ('../partials/footer') %>
