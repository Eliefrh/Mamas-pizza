<%- include ('../partials/header.ejs') %>

<div class="">
  <div class="col s12">
    <a href="/event/add" class="btn btn-success btn-lg">Ajouter événement</a>
  </div>
</div>
<br />

<div class="">
  <div class="col s12">
    <% if (items !== undefined && items.length > 0) {%>
    <table class="table">
      <thead>
        <tr>
          <th style="width: 1%; text-align: center">ID</th>
          <th style="width: 49%">Nom</th>
          <th style="width: 20%">Description</th>
          <th style="width: 10%">Emplacement</th>
          <th solspan="2" style="width: 20%; text-align: center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(function(item,index){ %>
        <tr>
          <td style="width: 1%; text-align: center"><%= index+1 %></td>
          <td style="width: 49%"><%= item.e_name %></td>
          <td style="width: 20%"><%= item.e_desc %></td>
          <td style="width: 10%"><%= item.e_location %></td>
          <td solspan="2" style="width: 20%; text-align: center">
            <a href="/event/edit/<%=item.e_id %>" class="btn btn-success"
              >Editer
            </a>
            <a href="/event/delete/<%=item.e_id %>" class="btn btn-danger"
              >Effacer
            </a>
          </td>
        </tr>
        <%}); %>
      </tbody>
    </table>
    <% }else {%>
    <p><strong> Non disponible </strong></p>
    <% } %>
  </div>
  <div><%- include ('../partials/footer.ejs') %></div>
</div>
